<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/gradient"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/your_lottery_numbers"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/lottery_balls_group" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/text_view_ball_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/regular_ball"
            android:padding="12dp"
            android:text="01"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#e6ffe5"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/text_view_ball_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/regular_ball"
            android:padding="12dp"
            android:text="02"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#e6ffe5"
            android:textSize="36sp" />
        <TextView
            android:id="@+id/text_view_ball_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/regular_ball"
            android:padding="12dp"
            android:text="03"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#e6ffe5"
            android:textSize="36sp" />
        <TextView
            android:id="@+id/text_view_ball_4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/regular_ball"
            android:padding="12dp"
            android:text="04"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#e6ffe5"
            android:textSize="36sp" />
        <TextView
            android:id="@+id/text_view_ball_5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/regular_ball"
            android:padding="12dp"
            android:text="05"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#e6ffe5"
            android:textSize="36sp" />



        <TextView
            android:id="@+id/text_view_mega_ball_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/mega_ball"
            android:padding="12dp"
            android:text="21"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#e6ffe5"
            android:textSize="36sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/text_view_ball_11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/regular_ball"
            android:padding="12dp"
            android:text="11"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#e6ffe5"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/text_view_ball_12"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/regular_ball"
            android:padding="12dp"
            android:text="12"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#e6ffe5"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/text_view_ball_13"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/regular_ball"
            android:padding="12dp"
            android:text="13"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#e6ffe5"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/text_view_ball_14"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/regular_ball"
            android:padding="12dp"
            android:text="14"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#e6ffe5"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/text_view_ball_15"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/regular_ball"
            android:padding="12dp"
            android:text="16"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#e6ffe5"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/text_view_mega_ball_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/mega_ball"
            android:padding="12dp"
            android:text="22"
            android:freezesText="true"
            android:textAlignment="center"
            android:textColor="#e6ffe5"
            android:textSize="36sp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonGetNumbers"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_draw"
        android:freezesText="true"
        android:padding="8dp"
        android:text="@string/get_numbers"
        android:textColor="#e6ffe5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/buttonGetOldNumbers"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_draw"
        android:freezesText="true"
        android:padding="8dp"
        android:text="@string/get_old_numbers"
        android:textColor="#e6ffe5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/buttonGetNumbers"
        app:layout_constraintVertical_bias="0.191" />


</android.support.constraint.ConstraintLayout>